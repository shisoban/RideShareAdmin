@using RideshareAdmin.Console.AdminLte
@using RideshareAdmin.Console.Models
@model UserDetailViewModel
@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="box">
    <div class="box-header">
        <h3 class="box-title">Application User Detials</h3>
    </div>
    <!-- /.box-header -->
 
    <div class="box-body">
        <table id="UserDetailTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@item.fullname</td>
                        <td>@item.mobile</td>
                        <td> @item.email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>

@section scripts
{
    <script src="~/Scripts/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#UserDetailTable").DataTable();
        });
    </script>

}